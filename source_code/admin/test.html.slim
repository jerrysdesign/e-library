    #cont
      /! 結構更動 start
      ol.quiz_list_stylesass
        /! 選擇題 start
        li
          .cont_tab2
            .pd2040
              p.pd2020
                =zh_lorem_words 45
              ol.upper-alpha.pd2020
                li
                  /! 純文字狀態
                  .icon-list
                  =zh_lorem_sentences 1
