                li
                  /! 是非: 是
                  .icon-list.tft
                li
                  /! 是非: 否
                  .icon-list.tff
        li
          .cont_tab2
            .pd2040
              /! 題目只有圖
              p.pd2020
                img src="http://placehold.it/400x400&text=[img]" alt=""
              ol.upper-alpha.pd2020
                li
                  /! 是非: 是
                  .icon-list.tft
                li
                  /! 是非: 否
                  .icon-list.tff
        li
          .cont_tab2
            .pd2040
              /! 題目有圖文
              p.pd2020
                =zh_lorem_words 45 
                .clearfix
                img src="http://placehold.it/400x400&text=[img]" alt=""
              ol.upper-alpha.pd2020
                li
                  /! 是非: 是
                  .icon-list.tft
                li
                  /! 是非: 否
                  .icon-list.tff
        /! 是非題 end
