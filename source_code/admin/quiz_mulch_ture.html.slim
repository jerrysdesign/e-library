#cont_area
	.masthead
		.masthead__inner
			.masthead__head
				.masthead__title 題目
			.masthead__content
				== render "partials/type" , :locals => {:f => "mulch"}
	.container
		.cont.cont_tab4
			.pd2040
				.is-table
					.control-group
						label.control-label 題目
						.controls
							.row
								textarea.width-100 rows="2"
									= zh_lorem_paragraphs 3
							.i-b-block.row
								== render "partials/quiz_add_photo" , :locals => {:f => "ture"}
				.control-label.title 設定正確答案
				ol.quiz_add_subject
					li.control-group
						label.control-label
							label.radio
								input type="radio" name="optionsRadios" value="a"  A
						.controls
							.row.i-b-block
								input type="text" value="=zh_lorem_sentences 1"
							.i-b-block.row
								== render "partials/quiz_add_photo" , :locals => {:f => "ture"}
					li.control-group
						label.control-label
							label.radio
								input type="radio" name="optionsRadios" value="b"  B
						.controls
							.row
								input type="text" value="=zh_lorem_sentences 1"
							.i-b-block.row
								== render "partials/quiz_add_photo" , :locals => {:f => "ture"}
				.control-group
					label.control-label
					.controls
						a.btn.add href="javascript:;" 增加選項

		== render "partials/quiz_list" , :locals => {:f => "else"}